            <div class="container">
                <div class="row bg-white" style="margin-top: 2rem;margin-bottom: 1rem; border: 2px solid #e9eef2">
                    <div class="col">
                        <form id="updateform" role="form">
                            <label for="meettitle" style="font-size: 1.2rem;margin-top:0.5rem" >会议标题</label>
                            <div class="form-row">

                                <div class="col-md-3">
                                    <input type="email" class="form-control" id="meettitle" placeholder="XXXXXXX" readonly="readonly">
                                </div>
                            </div>

                            <label for="host" style="font-size: 1.2rem;margin-top:0.5rem">主办机构</label>
                            <div class="form-row">

                                <div class="col-md-3">
                                    <input type="email" class="form-control" id="host" placeholder="北京航空航天大学" readonly="readonly">
                                </div>
                            </div>

                            <label for="Place" style="font-size: 1.2rem; margin-top: 1rem">主办地点</label>
                            <div class="form-row">
                                <div class="form-group col-md-2">
                                    <input type="text" class="form-control" id="province" placeholder="北京市" readonly="readonly">
                                </div>
                                <div class="form-group col-md-3">
                                    <input type="text" class="form-control" id="city" placeholder="北京市" readonly="readonly">
                                </div>
                                <div class="form-group col-md-3">
                                    <input type="text" class="form-control" id="district" placeholder="海淀区" readonly="readonly">
                                </div>
                            </div>

                            <label for="Date Range" style="font-size: 1.2rem;">起止日期</label>
                            <div class="form-row">
                                <div class="col-auto">
                                    <input type="date" class="form-control" id="startDate" readonly="readonly">
                                    <div class="invalid-feedback">请选择会议开始日期</div>
                                </div>
                                <label style="font-size: 1rem; margin-left: 1rem; margin-right: 1rem;">至</label>
                                <div class="col-auto">
                                    <input type="date" class="form-control" id="endDate" readonly="readonly">
                                    <div class="invalid-feedback">请选择会议结束日期</div>
                                </div>
                            </div>

                            <label for="paperdate" style="font-size: 1.2rem;">截稿时间</label>
                            <div class="form-row">
                                <div class="col-auto">
                                    <input type="datetime-local" class="form-control" id="paperDate" required>
                                    <div class="invalid-feedback">请于会议开始日期前选择截稿时间</div>
                                </div>
                            </div>

                            <div class="form-group" style="margin-top: 1rem;">
                                <label for="meetdes" style="font-size: 1.2rem;">会议简介</label>
                                <textarea class="form-control" id="meetdes" rows="7" placeholder="这里是会议的简要介绍" readonly="readonly"></textarea>
                            </div>

                            <div class="form-group" style="margin-top: 1rem;">
                                <label for="paperdes" style="font-size: 1.2rem;">征文要求</label>
                                <textarea class="form-control" id="paperdes" rows="7" placeholder="这里是本次会议征文的要求" readonly="readonly"></textarea>
                            </div>
                            <div class="form-group" style="margin-top: 1rem;">
                                <label for="arrangement" style="font-size: 1.2rem;">日程安排</label>
                                <textarea class="form-control" required id="arrangement" rows="7" placeholder="这里是本次会议日程安排"></textarea>
                            </div>

                            <button onclick="update()" type="submit" class="btn btn-primary btn-dark" style="margin-bottom: 1rem;" id="update">更新</button>


                        </form>
                    </div>
