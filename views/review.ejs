
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../../../../favicon.ico">

    <title>评审页面</title>

    <!-- Bootstrap core CSS -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link rel="stylesheet" href="/css/sidebar.css">

    <!--Font Awesonme图标库-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous">
</head>
<!--mr margin-right -->
<body>

<div class="container-fluid" > <!--主体容器-->
    <div class="row flex-lg-nowrap"> <!--防溢出-->
        <div class="bg-primary sidebar-div sticky-top" style="width: 240px;" >  <!--侧边导航栏-->
            <% if (usertype === 'undefined'){ %>
            <%- include("unlogsidebar.ejs")%>
            <% }%>
            <% if (usertype === 'unit'){ %>
            <%- include("orgsidebar.ejs",{username: username, usertype:usertype})%>
            <% }%>
            <% if (usertype === 'person'){ %>
            <%- include("personsidebar.ejs",{username: username, usertype:usertype})%>
            <% }%>
        </div><!--侧边导航栏-->

        <div class="bg-light col">  <!--网页主体-->

            <!--头部导航栏-->
            <%- include("headnavbar.ejs", {page_title:"评审页面"})%>
            <!--头部导航栏-->

            <div class="container" style=" padding-top: 2%">
                <div style="height: 5%">

                </div>
                <div class="row bg-white" style="margin-bottom: 1rem; border: 2px solid #e9eef2;">
                    <div class="col">
                        <ul class="list-group list-group-flush">
                            <%for(let i = 0; i < papers.length; ++i){%>
                                <li class="list-group-item ">
                                    <h5>标题：<a href="/conference/<%=cid%>/review/<%=papers[i]._id%>" style="text-decoration:none; color: black"><%=papers[i].title%></a></h5>
                                    <h6>作者：<%=papers[i].firstau%>
                                        <%if (papers[i].secondau){%>-<%=papers[i].secondau%><%}%>
                                        <%if (papers[i].thirdau){%>-<%=papers[i].thirdau%><%}%></h6>
                                    <h6>投稿时间：<%= new Date().toString()%></h6>
                                    <h6>摘要：<%papers[i].abstract.substring(0,100)%></h6>
                                </li>
                            <%}%>
                        </ul>
                    </div>
                </div>

                <%- include('page_index.ejs', {page: page})%>
            </div>
        </div>

    </div>
</div>





<!-- Bootstrap core JavaScript
================================================== -->
<!-- Placed at the end of the document so the pages load faster -->
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script>window.jQuery || document.write('<script src="../../assets/js/vendor/jquery-slim.min.js"><\/script>')</script>
<script src="https://cdn.staticfile.org/popper.js/1.14.3/umd/popper.min.js"></script>
<script src="/js/bootstrap.min.js"></script>
</body>
</html>
