
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../../../../favicon.ico">

    <title>会议概览</title>

    <!-- Bootstrap core CSS -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link rel="stylesheet" href="/css/sidebar.css">

    <!--Font Awesonme图标库-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous">
</head>
<!--mr margin-right -->
<body>

<div class="container-fluid" > <!--主体容器-->
    <div class="row flex-lg-nowrap"> <!--防溢出-->
        <div class="bg-primary sidebar-div sticky-top" style="width: 240px;" >  <!--侧边导航栏-->
            <%- include("orgsidebar.ejs")%>
        </div><!--侧边导航栏-->

        <div class="bg-light col">  <!--网页主体-->

            <!--头部导航栏-->
            <div class="navbar navbar-light main-navbar" style="background-color: #e3f2fd">
                <a class="navbar-brand" href="#">会议概览</a>
                <form class="form-inline">
                    <input class="form-control mr-sm-2" type="search" placeholder="Search.." aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                </form>
            </div>
            <!--头部导航栏-->

            <div class="container">
                <div class="row">
                    <div class="col">
                        <div class="btn-group" role="group" style="padding: 0.5rem">
                            <button type="button" class="btn btn-outline-success">日期筛选</button>
                            <button type="button" class="btn btn-outline-success">升序</button>
                            <button type="button" class="btn btn-outline-success">降序</button>
                        </div>
                    </div>
                </div>

                <div class="row bg-white" style="margin-bottom: 1rem; border: 2px solid #e9eef2">
                    <div class="col">
                        <ul class="list-group list-group-flush"> <!--会议列表-->
                            <% for(let i = 0; i < confer.length; ++i){ %>
                            <li class="list-group-item ">
                                <h5><%= confer[i].title %></h5>
                                <h6>日期: <%= confer[i].start %> 至 <%= confer[i].end %></h6>
                                <h6>地点: <%= confer[i].location %></h6>
                                <h6>主办机构: <%= confer[i].org %></h6>
                            </li>
                            <% } %>
                        </ul>
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        <nav aria-label="...">
                            <ul class="pagination justify-content-center">
                                <%if(page === 1){%>
                                <li class="page-item disabled">
                                    <a class="page-link" href="#" tabindex="-1">Previous</a>
                                </li>
                                <%}else {%>
                                <li class="page-item">
                                    <a class="page-link" href="?page=<%=page-1%>" tabindex="-1">Previous</a>
                                </li>
                                <%}%>
                                <%for(let i = -2; i < 3 ; ++i){%>
                                    <%if (page+i > 0) {%>
                                        <%if ( i === 0 ){%>
                                            <li class="page-item active"><a class="page-link" href="#"><%=page%><span class="sr-only">(current)</span></a></li>
                                        <%}else{%>
                                            <li class="page-item">
                                                <a class="page-link" href="?page=<%=page+i%>"><%=page+i%></a>
                                            </li>
                                        <%}%>
                                    <%}%>
                                <%}%>
                                <li class="page-item">
                                    <a class="page-link" href="?page=<%= page+1%>">Next</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>


            </div>


        </div>
    </div>
</div>





<!-- Bootstrap core JavaScript
================================================== -->
<!-- Placed at the end of the document so the pages load faster -->
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script>window.jQuery || document.write('<script src="../../assets/js/vendor/jquery-slim.min.js"><\/script>')</script>
<script src="../../assets/js/vendor/popper.min.js"></script>
<script src="/js/bootstrap.min.js"></script>
</body>
</html>
